<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/backImgBtn"
                android:layout_width="73dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@color/black"
                android:scaleType="fitXY"
                android:src="@drawable/goback" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="60dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="회원가입"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20dp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/white" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/black"
            >
            <ImageButton
                android:id="@+id/myImgBtn"
                android:layout_width="250px"
                android:layout_height="250px"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="150dp"
                android:src="@drawable/profile" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:text="기본 정보"
            android:textColor="@color/white" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/nameText"
                android:layout_width="351dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/signup_round_bg"
                android:hint="이름을 입력해주세요 (ex 홍길동)"
                android:padding="6dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="12dp" />

            <ImageButton
                android:id="@+id/removeBtn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:background="@drawable/signup_round_bg"
                android:layout_gravity="right"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/ui_remove"
                />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="1dp"
            android:orientation="horizontal"
            android:padding="1dp">

            <EditText
                android:id="@+id/emailText"
                android:layout_width="351dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/signup_round_bg"
                android:hint="이메일을 입력해주세요 (ex hong@naver.com)"
                android:padding="6dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="12dp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:text="선택 입력"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="66dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/signup_round_bg"
                android:gravity="left"
                android:padding="8dp"
                android:text="성별"
                android:textColor="@color/white"
                android:textSize="12dp" />


            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/manBtn"
                    android:layout_width="85dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="1dp"
                    android:background="@drawable/signup_square_bg"
                    android:text="남자"
                    android:textColor="@color/white"
                    android:textSize="12dp" />

                <Button
                    android:id="@+id/womanBtn"
                    android:layout_width="85dp"
                    android:layout_height="35dp"
                    android:background="@drawable/signup_square_bg"
                    android:text="여자"
                    android:textColor="@color/white"
                    android:textSize="12dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            >

            <Spinner
                android:id="@+id/year"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:background="@drawable/signup_round_bg"
                android:layout_margin="1dp"/>

            <Spinner
                android:id="@+id/month"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:background="@drawable/signup_round_bg"
                android:layout_margin="1dp"
                />

            <Spinner
                android:id="@+id/day"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:background="@drawable/signup_round_bg"
                android:layout_margin="1dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="1dp"
            android:orientation="horizontal"
            android:padding="1dp">

            <EditText
                android:id="@+id/phoneNum"
                android:layout_width="351dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/signup_round_bg"
                android:hint="휴대폰 번호를 입력해주세요 (ex 010-xxxx-xxxx)"
                android:padding="6dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="12dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/add1"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_margin="1dp"
                android:padding="5dp"
                android:background="@drawable/signup_round_bg"
                android:hint="주소 입력"
                android:textColorHint="@color/white"
                android:textSize="12dp" />

        </LinearLayout>
        <Button
            android:id="@+id/signupBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/signup_round_bg"
            android:text="가입 하기"
            android:textColor="@color/white"
            />
    </LinearLayout>
</LinearLayout>
